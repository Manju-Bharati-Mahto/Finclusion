                    <circle cx="196" cy="4" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="4" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="36" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="68" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="100" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="132" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="164" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="196" cy="36" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="4" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="36" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="68" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="100" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="132" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="164" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="196" cy="68" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="4" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="36" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="68" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="100" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="132" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="164" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                    <circle cx="196" cy="100" r="4" fill="white" fill-opacity="0.1"/>
                </svg>
            </div>
        </div>
    </main>
    
    <footer>
        <div class="footer-links">
            <a href="#">About</a>
            <a href="#">Features</a>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
        </div>
        <div class="social-links">
            <a href="#" aria-label="Facebook">
